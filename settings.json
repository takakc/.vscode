{
    "editor.tabSize": 2,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        120
    ],
    "editor.minimap.showSlider": "always",
    "editor.cursorBlinking": "smooth",
    "trailing-spaces.regexp": "[　 \t]+",
    "trailing-spaces.trimOnSave": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.autoGuessEncoding": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true,
      "**/vendor/**": true
    },
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/.vagrant": true
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/.csv": true
    },
    "files.associations": {
        ".php_cs": "php",
        ".php_cs.dist": "php",
      "*.vue": "vue"
    },
    "emmet.variables": {
        "lang": "ja"
    },
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html",
        "blade": "html"
    },
    "emmet.triggerExpansionOnTab": true,
    "blade.format.enable": true,
    "html.suggest.angular1": false,
    "html.suggest.ionic": false,
    "css.validate": false,
    "scss.validate": false,
    "sasslint.configFile": ".sass-lint.yml",
    "csscomb.formatOnSave": true,
    "csscomb.preset": ".csscomb.json",
    "javascript.validate.enable": false,
    "javascript.format.enable": false,
    "eslint.nodePath": "node_modules\\.bin",
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "eslint.options": {
        "configFile": ".eslintrc.js"
    },
    "php.validate.run": "onType",
    "php.suggest.basic": false,
    "phpmd.rules": "phpmd.xml",
    "php-cs-fixer.config": ".php_cs.dist",
    "php-cs-fixer.executablePathWindows": "${workspaceRoot}/vendor/bin/php-cs-fixer.bat",
    "[php]": {
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "files.trimTrailingWhitespace": false
    },
    "indentRainbow.indentSetter": {
        "php": {
            "tabSize": 4,
            "insertSpaces": true
        }
    }
    // ここから下はユーザ設定で自身の環境に合わせて書き換え
    // "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    // "php.validate.executablePath": "C:\\パス\\php.exe",
}
